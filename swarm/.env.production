# Laravel Product System Production Environment
# Ubuntu 22.04LTS Docker Swarm用

# =============================================================================
# アプリケーション設定
# =============================================================================
APP_NAME="Laravel Product System"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://laravel.localhost
APP_TIMEZONE=UTC
APP_LOCALE=ja
APP_FALLBACK_LOCALE=en

# =============================================================================
# データベース設定（PostgreSQL）
# =============================================================================
DB_CONNECTION=pgsql
DB_HOST=postgres-primary
DB_PORT=5432
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=secret
DB_CHARSET=utf8
DB_COLLATION=utf8_unicode_ci

# =============================================================================
# Redis設定
# =============================================================================
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CLIENT=predis

# =============================================================================
# キャッシュ・セッション・キュー設定
# =============================================================================
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_LIFETIME=120

# =============================================================================
# MinIO S3設定
# =============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_CONSOLE_ADDRESS=:9001

# AWS設定（MinIO用）
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_DEFAULT_REGION=us-east-1
AWS_ENDPOINT=http://minio:9000
AWS_USE_PATH_STYLE_ENDPOINT=true
S3_BUCKET=laravel-product-system

# =============================================================================
# Elasticsearch設定
# =============================================================================
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=laravel_products

# =============================================================================
# メール設定
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@laravel.localhost"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# ログ設定
# =============================================================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# =============================================================================
# セキュリティ設定
# =============================================================================
BROADCAST_DRIVER=log
CACHE_PREFIX=laravel_cache
SESSION_PREFIX=laravel_session
QUEUE_PREFIX=laravel_queue

# =============================================================================
# パフォーマンス設定
# =============================================================================
OPCACHE_ENABLE=1
OPCACHE_MEMORY_CONSUMPTION=256
OPCACHE_MAX_ACCELERATED_FILES=20000
OPCACHE_REVALIDATE_FREQ=0
OPCACHE_VALIDATE_TIMESTAMPS=0

# =============================================================================
# 監視設定
# =============================================================================
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
TRACING_ENABLED=false

# =============================================================================
# バックアップ設定
# =============================================================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE=s3_backups
