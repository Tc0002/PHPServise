<?xml version="1.0"?>
<ruleset name="Laravel Product System">
    <description>PSR-12 coding standard for Laravel Product System</description>

    <!-- Include PSR-12 standard -->
    <rule ref="PSR12"/>

    <!-- Paths to check -->
    <file>app/</file>
    <file>tests/</file>
    <file>config/</file>
    <file>database/</file>
    <file>routes/</file>

    <!-- Exclude paths -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/storage/*</exclude-pattern>
    <exclude-pattern>*/bootstrap/*</exclude-pattern>

    <!-- Show progress -->
    <arg value="p"/>

    <!-- Show source codes -->
    <arg value="s"/>

    <!-- Show sniff codes -->
    <arg value="n"/>
</ruleset> 